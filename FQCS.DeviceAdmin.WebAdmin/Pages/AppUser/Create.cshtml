@page
@model FQCS.DeviceAdmin.WebAdmin.Pages.AppUser.CreateModel
@{
    var apiUrl = WebAdmin.Settings.Instance.ApiUrl;
}

@section head {
    <!-- Select2 -->
    <link rel="stylesheet" href="/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Model.Info.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Constants.Routing.DASHBOARD">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Constants.Routing.APP_USER">Account</a></li>
                    <li class="breadcrumb-item active">@Model.Info.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fa fa-info-circle mr-1"></i>
                            Info
                        </h3>
                    </div>
                    <!-- form start -->
                    <form role="form" id="form-main">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" name="username" class="form-control" placeholder="Please enter username">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="password" class="form-control" placeholder="Please enter password">
                            </div>
                            <div class="form-group">
                                <label>Full name</label>
                                <input type="text" name="full_name" class="form-control" placeholder="Please enter full name">
                            </div>
                            <div class="form-group">
                                <label>Role</label>
                                <select class="form-control select2" name="role">
                                    <option value="">Not selected</option>
                                </select>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-check mr-1"></i>
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

@section scripts {

    <!-- jquery-validation -->
    <script src="/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="/plugins/jquery-validation/additional-methods.min.js"></script>
    <!-- Select2 -->
    <script src="/plugins/select2/js/select2.full.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.select2').select2();
            getRoles();
            $('#form-main').validate({
                submitHandler: confirmSubmit,
                rules: {
                    username: {
                        required: true,
                        minlength: 5,
                        maxlength: 30,
                    },
                    password: {
                        required: true,
                        minlength: 6,
                        maxlength: 30,
                    },
                    role: {
                        required: true,
                    },
                },
                messages: {
                    username: {
                        required: "Username required",
                        minlength: "Username must be longer than 5 characters",
                        maxlength: "Username must be shorter than 30 characters",
                    },
                    password: {
                        minlength: "Password must be longer than 6 characters",
                        maxlength: "Password must be shorter than 30 characters",
                    },
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });

        function confirmSubmit() {
            confirmAlert().then((result) => {
                if (result.value)
                    submitData();
            });
        }

        function submitData() {
            const model = {};
            model.username = $('[name=username]').val();
            model.full_name = $('[name=full_name]').val();
            model.password = $('[name=password]').val();
            model.role = $('[name=role]').val();
            changeLoading(true);
            $.ajax({
                url: '@apiUrl/@Business.Constants.ApiEndpoint.USER_API',
                type: 'post',
                contentType: 'application/json',
                data: JSON.stringify(model),
                success: (respData) => {
                    successAlert("Created successfully").then(() => {
                        location.href = '@Constants.Routing.APP_USER';
                    });
                },
                error: (resp) => {
                    handleGeneralError(resp);
                },
                complete: () => {
                    changeLoading(false);
                }
            });
        }

        function getRoles() {
            changeLoading(true);
            $.ajax({
                url: '@apiUrl/@Business.Constants.ApiEndpoint.ROLE_API',
                type: 'get',
                success: (respData) => {
                    console.log(respData);
                    let data = respData.data;
                    let select = $('#form-main [name=role]');
                    for (var i = 0; i < data.length; i++) {
                        select.append(
                            $('<option value="' + data[i].name + '">').append(data[i].name)
                        );
                    }
                },
                error: (data) => {
                    handleGeneralError(data);
                },
                complete: () => {
                    changeLoading(false);
                }
            });
        }
    </script>
}
